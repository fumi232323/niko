{% extends "./base.tmpl" %}

{% block main %}
<div class="article-content">
  <main class="item item-article item-{{ post.alltags[0] }}">
    <div class="category">
      <a href="/tags/{{ post.alltags[0] }}/">
          {{ post.alltags[0] }}
      </a>
    </div>
    <div class="title">{{ post.title() }}</div>
    <time class="date" datetime="{{ post.date }}">
      {{ post.date.strftime('%Y-%m-%d %a') }}
    </time>
    {% if post.updated %}
      <time class="date" datetime="{{ post.updated }}">
        updated: {{ post.updated.strftime('%Y-%m-%d %a') }}
        <%-- {{ post.formatted_updated(date_format) }} --%>
      </time>
    {% endif %}
    <div class="text">
      {{ post.text() }}
    </div>
  </main>
</div>
{% endblock main %}
